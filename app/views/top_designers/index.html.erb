<% if current_user.nil? %>
	<%= link_to new_user_session_path, class: 'login-button' do %>Sign in<% end %>
<% else %>
	<%= link_to new_designer_path, class: 'login-button' do %>Go to App<% end %>
<% end %>

<% if user_signed_in? %>
  <%= link_to('Edit registration', edit_user_registration_path) %>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
<% else %> 
  <%= link_to('Register', new_user_registration_path)  %>
  <%= link_to('Login', new_user_session_path)  %>  
<% end %>

<div class="container mt-3">
  <h2>Get Started</h2>
  <!-- Button to Open the Modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
    Open modal
  </button>

  <!-- The Modal -->
  <div class="modal fade" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title text-center">Welcome to Avid Design!</h4>
          <button type="button" class="close" data-dismiss="modal">Ã—</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
          <p>Where you can Publish your work</p><hr>
          <p>Gain Exposure</p><hr>
          <p>Increase Leads</p><hr>
          <p>These are our current featured Interior Designers: <a href="/designers" role="button" class="btn btn-secondary popover-test" title="Our Featured Designers" data-content="Popover body content is set in this attribute.">button</a></p>
          <p><a href="/clients" class="tooltip-test" title="Looking For Designer?">Designers</a> and <a href="/designers" class="tooltip-test" title="Looking for Clients">Clients</a></p>
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
        
      </div>
    </div>
  </div>
  
</div>


<h1 class="header mt-5">Find a designer in your local city.</h1>
<div class="container justify-content-center mt-5">
  <div class="row col-12-sm text-center">
    <% @featured_designers.keys.each do |destination| %>
      <div class="card" style="width: 30rem;">
        <img class="card-img-top" src=".../100px180/" alt="Card image cap">
        <div class="card-body">
          <a class="badge badge-info badge-sm" href="./locations/<%= destination %>"><h6 class="card-title card-dark"><%= destination %></h6></a>
        </div>
      </div>
    <% end %>
  </div>
</div>